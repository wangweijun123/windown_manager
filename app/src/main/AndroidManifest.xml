        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.wangweijun.text_process2.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.example.wangweijun.text_process2.ACustomTextProcessingActivity"
            android:icon="@mipmap/cf_ic_top_search"> <!-- android:label="os-search"-->
