            <meta-data android:name="text_process_enhance.removable" android:value="false"/>
            <meta-data android:name="text_process_enhance.show_icon" android:value="true"/>
            <meta-data android:name="text_process_enhance.change_color" android:value="true"/>
            <meta-data android:name="text_process_enhance.icon_dark" android:value="red.jpeg"/>
            <meta-data android:name="text_process_enhance.icon_light" android:value="white.jpeg"/>
            <meta-data android:name="text_process_enhance.replace_web_search" android:value="false"/>
            <meta-data android:name="text_process_enhance.secret_key" android:value="ceRgWyYtfvSlJE4AAE8CqQ=="/>

            <intent-filter>
                <action android:name="android.intent.action.PROCESS_TEXT"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/plain"/>
            </intent-filter>
        </activity>



        <activity android:name="com.example.wangweijun.text_process2.BActivity" android:label="os2">
            <meta-data android:name="text_process_enhance.position" android:value="10"/>
            <meta-data android:name="text_process_enhance.removable" android:value="false"/>
            <meta-data android:name="text_process_enhance.show_icon" android:value="false"/>
            <meta-data android:name="text_process_enhance.secret_key" android:value="y1llRU/0pqBv+I+qPRM0kg=="/>

            <intent-filter>
                <action android:name="android.intent.action.PROCESS_TEXT"/>
                <category android:name="android.intent.category.DEFAULT"/>
